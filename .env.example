# PrepCal example environment variables
# Copy this file to .env.local and fill in values

# --- App ---
NEXT_PUBLIC_APP_URL=http://localhost:3000

# --- Database ---
# Postgres connection string. For Neon, include ?sslmode=require
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DATABASE?sslmode=require

# --- Auth ---
# Better Auth
BETTER_AUTH_SECRET=
BETTER_AUTH_URL="http://localhost:3000"

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# --- Email (Resend) ---
RESEND_API_KEY=
RESEND_FROM_EMAIL=no-reply@example.com
# Note: Must be a verified domain/address in your Resend project.
# --- Billing (Polar) ---
POLAR_ACCESS_TOKEN=
POLAR_WEBHOOK_SECRET=
POLAR_SERVER=sandbox
POLAR_PRO_PRODUCT_ID=

# --- AI (Gemini via @ai-sdk/google) ---
GOOGLE_GENERATIVE_AI_API_KEY=

# --- Optional: Recipe Seeding Script ---
# Used by: pnpm db:seed-recipes
SITEMAP_URL=
SCRAPE_CONCURRENCY=5
BATCH_SIZE=100
CLEAR_DATABASE=false
